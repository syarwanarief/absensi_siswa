<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAdmin.InputSiswa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5pt">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelas"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/kelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/pilihKelas"
            android:layout_marginTop="4pt">

        </androidx.appcompat.widget.AppCompatSpinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bidang Studi"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/bidangStudi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/bidangStudi"
            android:layout_marginTop="4pt">

        </androidx.appcompat.widget.AppCompatSpinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Pelajaran"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <EditText
            android:id="@+id/mataPelajaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text">
        </EditText>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10pt">

            <Button
                android:onClick="save"
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textAlignment="center"
                android:background="@color/colorAccent">
            </Button>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>