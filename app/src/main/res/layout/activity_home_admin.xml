<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAdmin.HomeAdmin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70pt"
            android:src="@drawable/logo"
            android:layout_marginTop="5pt"
            android:layout_marginBottom="15pt"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="10pt"
                android:onClick="siswa">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:src="@drawable/siswa"
                    android:layout_marginBottom="5pt"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Siswa"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:gravity="center"></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="10pt"
                android:onClick="laporan">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:src="@drawable/laporan"></ImageView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Laporan"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:gravity="center"></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="10pt"
                android:onClick="profil">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="40pt"
                    android:src="@drawable/logo"
                    android:paddingBottom="7pt"></ImageView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profil Sekolah"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:gravity="center"></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="10pt"
                android:onClick="logout">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="40pt"
                    android:src="@drawable/logout"
                    android:paddingBottom="10pt"></ImageView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:gravity="center"></TextView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>