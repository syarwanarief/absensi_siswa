<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAdmin.Siswa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:src="@drawable/logo"
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            android:layout_marginBottom="15pt"></ImageView>

        <RelativeLayout
            android:layout_margin="5pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="35pt">

            <Button
                android:onClick="inputSiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input Siswa"
                android:textAlignment="center"
                android:background="@color/colorAccent">
            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5pt"
            android:layout_marginTop="10pt">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Siswa"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:onClick="daftarSiswa">
            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5pt"
            android:layout_marginTop="10pt">

            <Button
                android:onClick="inputPelajaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input Pelajaran"
                android:textAlignment="center"
                android:background="@color/colorAccent">
            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="5pt"
            android:layout_marginTop="10pt">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Pelajaran"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:onClick="daftarPelajaran">
            </Button>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>