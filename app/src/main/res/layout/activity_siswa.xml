<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuAdmin.Siswa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5pt">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="50pt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo">

        </ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="35pt">

            <Button
                android:onClick="inputSiswa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input Siswa"
                android:textAlignment="center"
                android:background="@color/colorAccent">
            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10pt">

            <Button
                android:onClick="inputPelajaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input Pelajaran"
                android:textAlignment="center"
                android:background="@color/colorAccent">
            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10pt">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Siswa"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:onClick="daftarSiswa">
            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10pt">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar Pelajaran"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:onClick="daftarPelajaran">
            </Button>

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>