<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuGuru.AbsensiAction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5pt">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tglAbsen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:enabled="false">
            </EditText>

            <Button
                android:id="@+id/btnTgl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:background="@color/colorAccent"
                android:text="Pilih Tanggal"
                android:textAllCaps="false"
                android:layout_marginLeft="2pt">

            </Button>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <EditText
            android:id="@+id/Abnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Telp Wali Murid"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <EditText
            android:id="@+id/AbNoHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kelas"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/Abkelas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="5pt"
            android:entries="@array/pilihKelas">
        </androidx.appcompat.widget.AppCompatSpinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bidang Studi"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/AbbidangStudi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:entries="@array/bidangStudi">
        </androidx.appcompat.widget.AppCompatSpinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mata Pelajaran"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginTop="10pt">
        </TextView>

        <EditText
            android:id="@+id/AbmataPelajaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10pt">


            <Button
                android:onClick="hadir"
                android:id="@+id/hadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hadir"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:textAllCaps="false"
                android:layout_weight="5"
                android:layout_marginRight="5pt">
            </Button>

            <Button
                android:onClick="sakit"
                android:id="@+id/sakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sakit"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:textAllCaps="false"
                android:layout_weight="5"
                android:layout_marginRight="5pt">
            </Button>

            <Button
                android:onClick="izin"
                android:id="@+id/izin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Izin"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:textAllCaps="false"
                android:layout_weight="5"
                android:layout_marginRight="5pt">
            </Button>

            <Button
                android:onClick="alpha"
                android:id="@+id/alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha"
                android:textAlignment="center"
                android:background="@color/colorAccent"
                android:textAllCaps="false"
                android:layout_weight="5">
            </Button>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>