<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuGuru.HomeGuru">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:background="@drawable/gradient"
            android:layout_width="match_parent"
            android:layout_height="80pt"
            android:src="@drawable/logo"
            android:paddingTop="10pt"
            android:paddingBottom="10pt"
            android:layout_marginBottom="15pt"></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="10pt"
                android:onClick="ActionAbsen">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="25pt"
                    android:src="@drawable/absensi"
                    android:layout_margin="3pt"
                    android:layout_marginBottom="5pt"></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Presensi"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:gravity="center"></TextView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:layout_margin="10pt"
                android:onClick="TentangAplikasi">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="30pt"
                    android:layout_margin="3pt"
                    android:src="@drawable/ic_live_help_black_24dp"
                    android:paddingBottom="7pt"></ImageView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tentang Aplikasi"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:gravity="center"></TextView>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_margin="10pt"
            android:onClick="tentangSekolah">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_margin="3pt"
                android:src="@drawable/logo"
                android:paddingBottom="7pt"></ImageView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tentang Sekolah"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:gravity="center"></TextView>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_margin="10pt"
            android:onClick="logout">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="23pt"
                android:layout_margin="3pt"
                android:src="@drawable/logout"></ImageView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textStyle="bold"
                android:layout_gravity="bottom"
                android:gravity="center"></TextView>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>